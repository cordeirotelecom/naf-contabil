# Configuração de Produção - NAF Contábil
# Copie estas variáveis para o painel do Netlify em Site Settings > Environment Variables

# Autenticação NextAuth
NEXTAUTH_URL=https://seu-site.netlify.app
NEXTAUTH_SECRET=sua-chave-secreta-super-forte-minimo-32-caracteres

# Banco de Dados (Neon Database recomendado)
DATABASE_URL=postgresql://neondb_owner:password@xxxxx.neon.tech/neondb?sslmode=require

# Configuração de Email (Gmail/Outlook/SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app

# Power BI (Opcional)
POWERBI_CLIENT_ID=seu-client-id
POWERBI_CLIENT_SECRET=seu-client-secret
POWERBI_TENANT_ID=seu-tenant-id
POWERBI_WORKSPACE_ID=seu-workspace-id

# Configurações do Sistema
NODE_ENV=production
ENCRYPTION_KEY=sua-chave-de-criptografia-32-chars
SESSION_SECRET=sua-chave-de-sessao-forte

# URLs e Domínios
NEXT_PUBLIC_APP_URL=https://seu-site.netlify.app
NEXT_PUBLIC_API_URL=https://seu-site.netlify.app/api

# Configurações de Backup (Opcional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Configurações de Email Templates
COMPANY_NAME=NAF Contábil
COMPANY_EMAIL=contato@naf.com.br
SUPPORT_EMAIL=suporte@naf.com.br

# Configurações de Notificações
NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS=true
PUSH_NOTIFICATIONS=false

# Configurações de Performance
ENABLE_ANALYTICS=true
LOG_LEVEL=info
CACHE_TTL=3600
