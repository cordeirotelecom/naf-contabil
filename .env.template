# =================================================================
# NAF CONTÁBIL - CONFIGURAÇÃO DE AMBIENTE
# =================================================================
# Este arquivo contém as configurações necessárias para o funcionamento
# do sistema NAF Contábil em diferentes ambientes

# =================================================================
# BANCO DE DADOS
# =================================================================
# Para desenvolvimento local (SQLite):
# DATABASE_URL="file:./dev.db"

# Para produção (Neon PostgreSQL):
# DATABASE_URL="postgresql://neondb_owner:npg_xxxxx@xxxxx.us-east-1.aws.neon.tech/neondb?sslmode=require"

DATABASE_URL="file:./dev.db"

# =================================================================
# AUTENTICAÇÃO (NextAuth.js)
# =================================================================
# URL base da aplicação
NEXTAUTH_URL="http://localhost:4000"

# Chave secreta para JWT (IMPORTANTE: Use uma chave forte em produção)
NEXTAUTH_SECRET="desenvolvimento-local-secret-key-super-forte-123456789"

# =================================================================
# CONFIGURAÇÃO DE EMAIL (SISTEMA DE NOTIFICAÇÕES)
# =================================================================
# Configurações SMTP para envio de emails automáticos
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =================================================================
# POWER BI INTEGRATION
# =================================================================
# Configurações para integração com Power BI (opcional)
POWERBI_CLIENT_ID=your-powerbi-client-id
POWERBI_CLIENT_SECRET=your-powerbi-client-secret
POWERBI_TENANT_ID=your-powerbi-tenant-id
POWERBI_WORKSPACE_ID=your-powerbi-workspace-id
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""

# Email de origem para notificações do sistema
FROM_EMAIL="naf@instituicao.edu.br"

# =================================================================
# INTEGRAÇÕES EXTERNAS
# =================================================================
# Integração com Office 365 Forms
OFFICE_FORMS_API_KEY=""
OFFICE_FORMS_TENANT_ID=""

# API da Receita Federal (se aplicável)
RECEITA_FEDERAL_API_KEY=""

# Integração Power BI (opcional)
POWERBI_CLIENT_ID=""
POWERBI_CLIENT_SECRET=""
POWERBI_TENANT_ID=""

# =================================================================
# CONFIGURAÇÕES DA APLICAÇÃO
# =================================================================
# Ambiente de execução
NODE_ENV="development"

# Nome da aplicação
APP_NAME="NAF Contábil"
APP_VERSION="1.0.0"

# Configurações de monitoramento
MONITORING_ENABLED="true"
LOG_LEVEL="info"

# =================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =================================================================
# Rate limiting (requisições por minuto)
RATE_LIMIT_MAX="100"

# Timeout para operações de banco (segundos)
DB_TIMEOUT="30"

# =================================================================
# CONFIGURAÇÕES DE PRODUÇÃO (NETLIFY)
# =================================================================
